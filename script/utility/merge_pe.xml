<tool id="merge_pe" name="Merge Pair">
	<command interpreter="bash">
		merge_pe.sh -l $input1 -e $input2 > $output
	</command>
	<inputs>
		<param type="data" format="fasta,fastq" name="input1" label="Read_1" />
		<param type="data" format="fasta,fastq" name="input2" label="Read_2" />
	</inputs>
	<outputs>
		<data name="output" format_source="input1" label="${tool.name} on ${on_string}"/>
	</outputs>
</tool>
